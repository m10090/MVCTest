@{
    ViewData["Title"] = "Students";
}

<h1>Students</h1>

<ul id="students">
    @foreach (var student in Model)
    {
        <li>
            <div class="@(student.degree < 50 ? "red" : "green")">
                <h5>@student.name</h5>
                <p>age :@student.age</p>
                <p>email :@student.email</p>
                <p>degree :@student.degree</p>
                <p>@(student.degree <50 ? "failed": "passed") </p>
            </div>
        </li>
    }
  <style>
    .red {
        background-color: red;
    }
    .green {
        background-color: green;
    }
  </style>
<a asp-action="add">Create</a>
</ul>
